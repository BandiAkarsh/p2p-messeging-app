# EcoMesh Local Development Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Cloudflare Workers Configuration
# ============================================

# Get your Cloudflare API token from: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Cloudflare Workers (Edit), Account (Read)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Your Cloudflare Account ID (found in Workers dashboard sidebar)
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# ============================================
# AI Worker Configuration
# ============================================

# Workers AI Token (if using local AI simulation)
# For local testing, you can leave this empty - the mock will be used
WORKERS_AI_TOKEN=

# Optional: Use real Cloudflare AI in local dev (set to 'true' to enable)
USE_REAL_AI=false

# ============================================
# Signaling Worker Configuration
# ============================================

# Durable Objects namespace (already configured in wrangler.toml)
# DURABLE_OBJECTS_NAMESPACE=SIGNALING

# ============================================
# Local Development Ports
# ============================================

SIGNALING_WORKER_PORT=8787
AI_WORKER_PORT=8788

# ============================================
# Testing Configuration
# ============================================

# Enable verbose logging in local development
DEBUG=true

# Test peer IDs (for local testing)
TEST_PEER_ID=peer_test_123
TEST_PEER_PUBLIC_KEY=your_test_public_key_here
